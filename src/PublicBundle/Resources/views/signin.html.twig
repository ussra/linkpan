{% extends "::base.html.twig" %}

{% block PublicHead %}
    <link rel="stylesheet" href={{ asset('scripts/styles/Signin.css') }}>
{% endblock %}

{% block PublicBody %}
    <div  id="background" style="margin-top: 11%;">
        <div class="container"  >
            <div class="row" style="height: 80px;">

            </div>
            <div class="row">
                <div class="col-6  text-center" >

                </div>
                <div class="col-lg-6 col-md-12 col-sm-12 " id="form">
                    <form class="text-center" role="form" method="POST" action="{{ path('security_login_check') }}">
                        <h1>{{ 'signin_SIGN_IN'|trans }}</h1>
                        {% if activemessage  is defined %}
                            <div class="alert alert-success">
                                {{ activemessage }}
                            </div>
                        {% endif %}
                        {% if app.request.get('0') is defined and app.request.get('0') == 'authMessage' %}
                            <div  class="col-8 offset-2">
                                <div class="alert alert-danger">
                                    <small>{{ 'signin_Invalid_login'|trans }}</small>
                                </div>
                            </div>
                        {% endif %}
                        <div class="text-center">
                            <input type="email" placeholder="E-mail" class="biginput" id="email" name="_email" required>
                        </div>
                        <div class="text-center">
                            <input type="password" placeholder="{{ 'Password'|trans }}" class="biginput" id="password" name="_password" required>
                        </div>
                        <div class="text-center">
                            <a id="signin"><!--id="btn_signin"-->
                                <input type="submit"  class="btn btn-dark" value="{{ 'signin_SIGN_IN'|trans }}" >
                            </a>
                        </div>
                        <div class="text-center">
                            <span style="color: white"> {{ 'signin_donthaveacc'|trans }} </span> &nbsp;<a  class="checkboxlink" > Sign up </a></br>
                            <a href="#" ><span style="color: white">{{ 'signin_forgotpass'|trans }}</span></a>
                        </div>
                    </form>
                    <!-- ******************** 
                        <br>
                        <div class="text-center">
                        <div style="border-bottom:5px solid white;width:60px;display:inline-block;border-radius:5px"></div> 
                            <div style="color:white;display:inline-block;padding:10px"> { 'signin_choice'|trans }}</div>
                        <div style="border-bottom:5px solid white;width:60px;display:inline-block;border-radius:5px"></div>
                        </div>
                        <br>
                        <div class="row" style="padding:6px">
                            <div class="col-xl-8 offset-xl-2" >
                            <div class="card" >
                                <div class="card-body text-center">
                                    <a href="#" class="btn btn-primary"><i class="fa fa-facebook-square" style="margin-right:5px"></i>{{ 'signin_withfb'|trans }}</a>
                                </div>
                            </div>
                            </div>
                        </div>
                     ****************** -->
                </div>
            </div>
        </div>
    </div>

    <!-- forget password -->
    <div id="forgotpass" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="email">Your Email:</label>
                        <input type="email" class="form-control" id="email">
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" data-dismiss="modal">Confirm</button>
                </div>
            </div>

        </div>
    </div>
{% endblock %}

{% block PublicScripts  %}
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>


{% endblock %}