{% extends "::base.html.twig" %}


{% block PublicHead %}
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="{{ asset('scripts/styles/contactus.css') }}">
{% endblock %}

{% block Title %}
    Contact us
{% endblock %}

{% block search %}
{% endblock %}

{% block PublicBody %}
    <section id="s1">
        <div class="container-fluid"> <!--container-->
            <div class="row">
                <div class="col-12 text-center" style="margin-top: 5%">
                    <img src="{{ asset('scripts/img/img1.svg') }}" class="img-fluid center-block" width="600px" height="600px" id=img1/>  </br>
                </div>
            </div>
            <div class="row">
                <div class="col-12 text-center">
                    <br> <p style="color: white;">Have a question, suggestions, feedback ?
                        <br>  Please reach out. We are looking forward to hearing from you.</p>
                </div>
            </div>
        </div>
    </section>

    <section id="s2">
        <div class="row">
            <div class="col-3">
            </div>
            <div class="col-xl-6 col-lg-4 col-md-12 col-sm-12">
                <form class="text-center" method="post" action="{{ path('contactus') }}">
                    <div  id="form">
                        <h1 style="color: white;">Leave us a message</h1>
                        <div class="text-center">
                            <input type="text" placeholder="Full name" name="fullname" class="smallinput" required>
                            <input type="text" placeholder="Email" name="email" class="smallinput" required>
                        </div>
                        <div class="text-center">
                            <input type="text" placeholder="Phone" name="phone" class="smallinput">
                            <input type="text" placeholder="Company" name="company" class="smallinput" required>
                        </div>
                        <div class="text-center">
                            <select name="reason" required>
                                <option disabled selected value="">Please select the reason you are contacting us</option>
                                <option value="Question">Question</option>
                                <option value="suggestions">suggestions</option>
                                <option value="Web site error">Web site error</option>
                                <option value="Other">Other</option>
                            </select>
                        </div>
                        <div class="text-center">
                            <textarea placeholder="Your message" name="description" id="message" required></textarea>
                        </div>
                        <div class="text-right">
                            <input type="submit"  class="btn btn-dark" value="SEND" id="btn_send">
                        </div>

                    </div>
                </form>
            </div>
            <div class="col-3">
            </div>

        </div>

    </section>

{% endblock %}

{% block PublicScripts  %}
{% endblock %}