{% extends "::base.html.twig" %}


{% block PublicHead %}
    {{ parent() }}
    <link rel="stylesheet" href={{ asset('scripts/styles/Signup.css') }}>
{% endblock %}

{% block search %}
{% endblock %}

{% block PublicBody %}
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <div  id="background" style="margin-top: 8%">

        <div class="container ">
            <div class="row ustify-content-center h-100">
                <div class="col-6 text-center" >
                </div>
                <div class="col-xl-6 col-lg-4 col-md-12 col-sm-12" id="form">
                    <form class="text-center">
                        <h1>SIGN UP NOW !</h1>
                        <div class="text-center">
                            <input type="text" placeholder="First name" class="smallinput" id="firstname" required>
                            <input type="text" placeholder="Last name" class="smallinput" id="lastname" required>
                        </div>
                        <div class="text-center">
                            <input type="email" placeholder="E-mail" class="biginput" id="email"required>
                        </div>
                        <div class="text-center">
                            <input type="password" placeholder="Password" class="biginput" id="password" pattern=".{3,}" required>
                        </div>
                        <div class="text-center">
                            <input type="password" placeholder="{{'pub_confirmpass'|trans }}" class="biginput" id="confirmpassword" name="confirmpassword" pattern=".{3,}" required>
                        </div>
                        <div class="text-center">
                            <div class="custom-control custom-checkbox">
                                <input type="checkbox" class="custom-control-input" id="customCheck1" checked disabled>
                                <label class="custom-control-label" for="customCheck1" id="checkboxtext">I accept &nbsp;<a  class="checkboxlink"> terms </a>&nbsp;  and &nbsp;<a  class="checkboxlink">&nbsp;privacy</a></label>
                            </div>
                        </div>
                        <div class="text-center">
                            <a id="signup">
                                <input type="button"  class="btn btn-dark signup" value="SIGN UP" id="btn_signup">
                            </a>
                        </div>
                        <div class="text-center">
                            <span style="color: white">Already have an account ?</span> &nbsp;<a href="{{ path('signin') }}" class="checkboxlink"> Signin </a>
                        </div>
                    </form>
                </div>
            </div>


        </div>
    </div>
{% endblock %}

{% block PublicScripts  %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>

{% endblock %}